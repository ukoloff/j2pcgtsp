svg
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100
  box-sizing: border-box
  padding: 0

path
  stroke-width: 1px
  vector-effect: non-scaling-stroke
  fill-rule: nonzero

  &.DBS
    fill: #cdff00
    stroke: black

    &:first-of-type
      fill: none

    &:hover
      stroke-dasharray: 1%
      animation: dash 1s linear infinite

  &.part
    fill: white
    fill-opacity: 0%
    stroke: black

    &:hover
      fill: yellow
      fill-opacity: 50%
      stroke-dasharray: 1%
      animation: dash 1s linear infinite

  &.cluster
    stroke: black
    fill: yellow
    fill-opacity: 15%

    &:hover
      fill: yellow
      fill-opacity: 50%
      stroke-dasharray: 1%
      animation: dash 1s linear infinite

  &.route
    stroke: red
    fill: none

circle.pierce
  r: 0.2%
  fill: #00ff00
  stroke: navy
  stroke-width: 1px
  vector-effect: non-scaling-stroke

  &:hover
    fill: yellow
    stroke: red

circle.route:hover
  fill-opacity: 75%
  stroke: lime

@keyframes dash
  from
    stroke-dashoffset: 0%
  to
    stroke-dashoffset: -2%
